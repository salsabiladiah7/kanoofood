<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_addfood"
    android:orientation="vertical"
    tools:context=".admin_ui.payment.DetailPayment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/right_arrow" />


        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="start"
            android:text="Diva's Order"
            android:textColor="#A340BC"
            android:textSize="28dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:background="@android:color/white">

                <!-- Table Heading -->

                <TableRow android:background="#619EF0">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="No"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="Food Name"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="Price"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="Quantity"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="Totals"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"></TextView>
                </TableRow>

                <!-- Table Data -->

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="1"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="Nasi Goreng"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="15000"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="2"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="30000"
                        android:textSize="13sp"></TextView>

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="2"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="Soto Ayam"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="12000"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="1"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="12000"
                        android:textSize="13sp"></TextView>

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="3"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="Jus Buah"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="5000"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="1"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="5000"
                        android:textSize="13sp"></TextView>

                </TableRow>

            </TableLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="21dp">

            <TextView
                android:id="@+id/tx_total"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Total"
                android:textColor="#A340BC"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tx_rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@id/tx_total"
                android:fontFamily="@font/poppinsbold"
                android:text="Rp"
                android:textColor="#A340BC"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tx_rp"
                android:fontFamily="@font/poppinsbold"
                android:text="47000"
                android:textColor="#A340BC"
                android:textSize="20sp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/signupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparant"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppinsbold"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="99dp"
                android:layout_height="35dp"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:background="@drawable/line_button"
                android:fontFamily="@font/poppinssemibold"
                android:gravity="center"
                android:text="04-08-2021"
                android:textColor="#3D3838"
                android:textSize="13sp"
                tools:ignore="RtlCompat" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppinsbold"
                            android:text="Payment"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/line_button"
                            android:fontFamily="@font/poppinssemibold"
                            android:padding="11dp"
                            android:text="Rp. 20000"
                            android:textColor="#3D3838"
                            android:textSize="13sp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppinsbold"
                            android:text="Payment Remaining"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/line_button"
                            android:fontFamily="@font/poppinssemibold"
                            android:padding="11dp"
                            android:text="0"
                            android:textColor="#3D3838"
                            android:textSize="13sp"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="13dp"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Status Order"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btn_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:elevation="15dp"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:text="Completed"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:backgroundTint="#0DD214"
                app:shapeAppearanceOverlay="@style/Button4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>